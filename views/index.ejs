
<% include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">
		Blog App
	</div>
	
	<div class="ui top attached segment">
		<div class="ui divided items">

			<% blogs.forEach(function(blog){ %>	
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">
					</div>
					<div class="content">
						
						<a class="header" href="/blogs/<%= blog._id %>">
						<%= blog.title %></a>
						<div class="meta">
							<span><%=blog.created%></span>
						</div>
						
						<div class="extra">
							<a class="small ui left floated basic teal button" href="/blogs/<%=blog._id %>">	
								Read More
								<i id="button_icons" class="chevron right icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
		
</div>
<% include partials/footer %>